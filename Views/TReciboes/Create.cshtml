@model AlquilerVehiculos.Models.TRecibo

@{
    ViewData["Title"] = "Crear Recibo";
}

<h1 class="mb-4">Nuevo Registro</h1>

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Datos del Recibo</h4>
                <hr />

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FechaPago" class="control-label"></label>
                        <input asp-for="FechaPago" class="form-control" />
                        <span asp-validation-for="FechaPago" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Monto" class="control-label"></label>
                        <input asp-for="Monto" class="form-control" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Metodo" class="control-label"></label>
                        <input asp-for="Metodo" class="form-control" />
                        <span asp-validation-for="Metodo" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver a la lista
                        </a>

                        <button type="submit" class="btn btn-primary">
                            Guardar Recibo
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}