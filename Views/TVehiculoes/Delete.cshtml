@model AlquilerVehiculos.Models.TVehiculo

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<h1 class="mb-4">Eliminar Vehículo</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="card-title mb-3">
            Confirmación de eliminación
        </h4>
        <hr />

        <div class="alert alert-danger" role="alert">
            ¿Está seguro que desea eliminar este vehículo?
            <strong>Esta acción no se puede deshacer.</strong>
        </div>

        <dl class="row">

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Placa)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Placa)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Marca)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Modelo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Modelo)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Anio)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Anio)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IdSucursalNavigation)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdSucursalNavigation.IdSucursal)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IdTipoNavigation)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdTipoNavigation.IdTipo)</dd>

        </dl>

        <div class="d-flex justify-content-between mt-4">

            <a asp-action="Index" class="btn btn-secondary">
                Volver a la lista
            </a>

            <form asp-action="Delete" method="post" class="m-0">
                @* Ocultamos el Id del cliente para el POST *@
                <input type="hidden" asp-for="IdVehiculo" />
                <button type="submit" class="btn btn-danger">
                    Eliminar Vehículo
                </button>
            </form>

        </div>

    </div>
</div>