@model AlquilerVehiculos.Models.TAlquilere

@{
    ViewData["Title"] = "Eliminar Alquiler";
}

<h1 class="mb-4">Eliminar Alquiler</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="card-title mb-3 text-danger">
            <i class="bi bi-exclamation-triangle"></i> Confirmar eliminación
        </h4>

        <p class="mb-4">¿Está seguro de que desea eliminar este alquiler?</p>

        <hr />

        <!-- TABLA DETALLE DEL ALQUILER -->
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>IVA</th>
                    <th>Estado</th>
                    <th>Cliente</th>
                    <th>Empleado</th>
                    <th>Sucursal</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@Model.FechaFin?.ToString("dd/MM/yyyy")</td>
                    <td>@Model.Iva.ToString("0.00") %</td>
                    <td>@Model.Estado</td>
                    <td>@Model.IdClienteNavigation?.Nombre</td>
                    <td>@Model.IdEmpleadoNavigation?.Nombre</td>
                    <td>@Model.IdSucursalNavigation?.Nombre</td>
                </tr>
            </tbody>
        </table>

        <!-- ACCIONES -->
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="IdAlquiler" />

            <div class="d-flex justify-content-between">

                <a asp-action="Index" class="btn btn-secondary">
                    Volver a la lista
                </a>

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </button>

            </div>
        </form>

    </div>
</div>
