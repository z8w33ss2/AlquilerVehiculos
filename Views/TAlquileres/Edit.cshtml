@model AlquilerVehiculos.Models.TAlquilere

@{
    ViewData["Title"] = "Editar Alquiler";
}

<h1 class="mb-4">Editar Alquiler</h1>

<div class="row justify-content-center">
    <div class="col-md-7">

        <div class="card shadow-sm">
            <div class="card-body">

                <h4 class="card-title mb-3">Modificar Información del Alquiler</h4>
                <hr />

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="IdAlquiler" />

                    <div class="mb-3">
                        <label asp-for="FechaInicio" class="form-label"></label>
                        <input asp-for="FechaInicio" class="form-control" type="date" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaFin" class="form-label"></label>
                        <input asp-for="FechaFin" class="form-control" type="date" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Iva" class="form-label"></label>
                        <input asp-for="Iva" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Iva" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdCliente" class="form-label"></label>
                        <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente"></select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdEmpleado" class="form-label"></label>
                        <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.IdEmpleado"></select>
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdSucursal" class="form-label"></label>
                        <select asp-for="IdSucursal" class="form-select" asp-items="ViewBag.IdSucursal"></select>
                        <span asp-validation-for="IdSucursal" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver a la lista
                        </a>

                        <button type="submit" class="btn btn-primary">
                            Guardar Cambios
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
