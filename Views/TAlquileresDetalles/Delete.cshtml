@model AlquilerVehiculos.Models.TAlquileresDetalle

@{
    ViewData["Title"] = "Eliminar Detalles de Alquiler";
}

<h1 class="mb-4">Eliminar Alquiler</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="card-title mb-3">
            Confirmación de eliminación
        </h4>
        <hr />

        <div class="alert alert-danger" role="alert">
            ¿Está seguro que desea eliminar este detalle?
            <strong>Esta acción no se puede deshacer.</strong>
        </div>

        <dl class="row">

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TarifaDiaria)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TarifaDiaria)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaInicio)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaFin)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaFin)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Subtotal)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Subtotal)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IdAlquiler)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdAlquiler)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.IdVehiculo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IdVehiculo)</dd>

        </dl>

        <div class="d-flex justify-content-between mt-4">

            <a asp-action="Index" class="btn btn-secondary">
                Volver a la lista
            </a>

            <form asp-action="Delete" method="post" class="m-0">
                @* Ocultamos el Id del cliente para el POST *@
                <input type="hidden" asp-for="IdDetalle" />
                <button type="submit" class="btn btn-danger">
                    Eliminar Detalle
                </button>
            </form>

        </div>

    </div>
</div>










