@model IEnumerable<AlquilerVehiculos.Models.TCliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="mb-4">Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Cliente
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nombre Completo</th>
            <th>Cédula</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th class="text-center" style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Cedula</td>
                <td>@item.Telefono</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>

                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">

                        <a asp-action="Edit" asp-route-id="@item.IdCliente"
                           class="btn btn-sm btn-warning">
                            Editar
                        </a>

                        <a asp-action="Details" asp-route-id="@item.IdCliente"
                           class="btn btn-sm btn-info text-white">
                            Detalles
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.IdCliente"
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
