@model AlquilerVehiculos.Models.TAlquileresDetalle

@{
    ViewData["Title"] = "Editar Detalle";
}

<h1 class="mb-4">Editar Detalle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-sm">
            <div class="card-body">

                <h4 class="card-title mb-3">Modificar Información</h4>
                <hr />

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdDetalle" />
                    <div class="form-group">
                        <label asp-for="IdAlquiler" class="control-label"></label>
                        <select asp-for="IdAlquiler" class="form-control" asp-items="ViewBag.IdAlquiler"></select>
                        <span asp-validation-for="IdAlquiler" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdVehiculo" class="control-label"></label>
                        <select asp-for="IdVehiculo" class="form-control" asp-items="ViewBag.IdVehiculo"></select>
                        <span asp-validation-for="IdVehiculo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TarifaDiaria" class="control-label"></label>
                        <input asp-for="TarifaDiaria" class="form-control" />
                        <span asp-validation-for="TarifaDiaria" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaInicio" class="control-label"></label>
                        <input asp-for="FechaInicio" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaFin" class="control-label"></label>
                        <input asp-for="FechaFin" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver a la lista
                        </a>

                        <button type="submit" class="btn btn-primary">
                            Guardar Cambios
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
