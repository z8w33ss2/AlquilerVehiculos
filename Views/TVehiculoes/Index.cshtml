@model IEnumerable<AlquilerVehiculos.Models.TVehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<h1 class="mb-4">Vehículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Registro
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Estado</th>
            <th>Sucursal</th>
            <th>Tipo de Vehículo</th>
            <th class="text-center" style="width: 200px;">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Placa</td>
                <td>@item.Marca</td>
                <td>@item.Modelo</td>
                <td>@item.Anio</td>
                <td>@item.Estado</td>

                <!-- Mostrar nombre de sucursal -->
                <td>@item.IdSucursalNavigation?.Nombre</td>

                <!-- Mostrar descripción del tipo de vehículo -->
                <td>@item.IdTipoNavigation?.Descripcion</td>

                <!-- ACCIONES -->
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">

                        <a asp-action="Edit" asp-route-id="@item.IdVehiculo"
                           class="btn btn-sm btn-warning">
                            Editar
                        </a>

                        <a asp-action="Details" asp-route-id="@item.IdVehiculo"
                           class="btn btn-sm btn-info text-white">
                            Detalles
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.IdVehiculo"
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
