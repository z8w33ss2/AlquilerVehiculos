@model AlquilerVehiculos.Models.TVehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}

<h1 class="mb-4">Nuevo Registro</h1>

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Datos del Vehículo</h4>
                <hr />

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Placa" class="control-label"></label>
                        <input asp-for="Placa" class="form-control" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Marca" class="control-label"></label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Modelo" class="control-label"></label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Anio" class="control-label"></label>
                        <input asp-for="Anio" class="form-control" />
                        <span asp-validation-for="Anio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdTipo" class="control-label"></label>
                        <select asp-for="IdTipo" class="form-control" asp-items="ViewBag.IdTipo"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdSucursal" class="control-label"></label>
                        <select asp-for="IdSucursal" class="form-control" asp-items="ViewBag.IdSucursal"></select>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver a la lista
                        </a>

                        <button type="submit" class="btn btn-primary">
                            Guardar Vehículo
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
