@model AlquilerVehiculos.Models.TAlquilere

@{
    ViewData["Title"] = "Detalles del Alquiler";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="card-title mb-3">Información del Alquiler</h4>
        <hr />

        <dl class="row">

            <dt class="col-sm-3 fw-bold">Fecha Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3 fw-bold">Fecha Fin</dt>
            <dd class="col-sm-9">@Model.FechaFin?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3 fw-bold">IVA</dt>
            <dd class="col-sm-9">@Model.Iva.ToString("0.00") %</dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>

            <dt class="col-sm-3 fw-bold">Cliente</dt>
            <dd class="col-sm-9">@Model.IdClienteNavigation?.Nombre</dd>

            <dt class="col-sm-3 fw-bold">Empleado</dt>
            <dd class="col-sm-9">@Model.IdEmpleadoNavigation?.Nombre</dd>

            <dt class="col-sm-3 fw-bold">Sucursal</dt>
            <dd class="col-sm-9">@Model.IdSucursalNavigation?.Nombre</dd>

        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                Volver a la lista
            </a>

            <a asp-action="Edit" asp-route-id="@Model?.IdAlquiler"
               class="btn btn-primary">
                Editar Alquiler
            </a>
        </div>

    </div>
</div>
