@model AlquilerVehiculos.Models.TRecibo

@{
    ViewData["Title"] = "Detalles de Recibo";
}

<h1 class="mb-4">Detalles de Recibo</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="card-title mb-3">
            Información del Cliente
        </h4>
        <hr />

        <dl class="row">

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaPago)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaPago.ToString("dd/MM/yyyy"))</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Monto)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Monto.ToString("0.00"))</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Metodo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Metodo)</dd>

        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                Volver a la lista
            </a>

            <a asp-action="Edit" asp-route-id="@Model?.IdRecibo" class="btn btn-primary">
                Editar Recibo
            </a>
        </div>

    </div>
</div>
