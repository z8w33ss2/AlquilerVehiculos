<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlquilerVehiculos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlquilerVehiculos.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-navbar shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Rent a Car Grupo # 1
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Inicio siempre visible -->
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Clientes -->
                            <li class="nav-item">
                                <a class="nav-link nav-link-main" asp-controller="TClientes" asp-action="Index">Clientes</a>
                            </li>

                            <!-- Empleados (ejemplo: solo para admin) -->
                            @if (User.IsInRole("AdminApp") || User.IsInRole("Jefe"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-main" asp-controller="TEmpleadoes" asp-action="Index">Empleados</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-main" asp-controller="TSucursales" asp-action="Index">Sucursales</a>
                                </li>
                            }

                            <!-- Vehículos (dropdown, visible para cualquier logueado) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-link-main" href="#" id="vehiculosDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Vehículos
                                </a>
                                <ul class="dropdown-menu shadow-sm" aria-labelledby="vehiculosDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="TVehiculoes" asp-action="Index">Vehículos</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="TVehiculosTipoes" asp-action="Index">Tipos de vehículos</a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Alquileres (dropdown) -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-link-main" href="#" id="alquileresDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Alquileres
                                </a>
                                <ul class="dropdown-menu shadow-sm" aria-labelledby="alquileresDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="TAlquileres" asp-action="Index">Alquileres</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="TAlquileresDetalles" asp-action="Index">
                                            Detalles de alquiler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="TReciboes" asp-action="Index">Recibos</a>
                                    </li>

                                    @* Bitácoras solo admin *@
                                    @if (User.IsInRole("AdminApp"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="TBitacoras" asp-action="Index">Bitácoras</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Usuario/ login-->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">Hola, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Ingresar</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted app-footer">
        <div class="container text-center">
            &copy; 2025 - Programación Avanzada Grupo # 1 -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
