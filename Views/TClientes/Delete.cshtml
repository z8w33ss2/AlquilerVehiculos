@model AlquilerVehiculos.Models.TCliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="mb-4">Eliminar Cliente</h1>

@* Mensaje de error si el cliente tiene alquileres asociados *@
@if (TempData["ErrorMensaje"] != null)
{
    <div class="alert alert-light border-danger shadow-sm mt-3 alert-dismissible fade show" role="alert">
        <h5 class="mb-1 text-danger fw-bold">
            <i class="bi bi-x-octagon-fill"></i>
            Operación no permitida
        </h5>
        <p class="mb-0 text-danger fw-semibold">@TempData["ErrorMensaje"]</p>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mt-3">
    <div class="card-body">

        <h4 class="card-title mb-3">
            Confirmación de eliminación
        </h4>
        <hr />

        <div class="alert alert-danger" role="alert">
            ¿Está seguro que desea eliminar este cliente?
            <strong>Esta acción no se puede deshacer.</strong>
        </div>

        <dl class="row">

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Cedula)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cedula)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Telefono)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

        </dl>

        <div class="d-flex justify-content-between mt-4">

            <a asp-action="Index" class="btn btn-secondary">
                Volver a la lista
            </a>

            <form asp-action="Delete" method="post" class="m-0">
                @* Ocultamos el Id del cliente para el POST *@
                <input type="hidden" asp-for="IdCliente" />
                <button type="submit" class="btn btn-danger">
                    Eliminar Cliente
                </button>
            </form>

        </div>

    </div>
</div>
