@model IEnumerable<AlquilerVehiculos.Models.TAlquilere>

@{
    ViewData["Title"] = "Alquileres";
}

<h1 class="mb-4">Alquileres</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Registro
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>IVA</th>
            <th>Estado</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Sucursal</th>
            <th class="text-center" style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Fechas -->
                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaFin?.ToString("dd/MM/yyyy")</td>

                <!-- IVA -->
                <td>@item.Iva.ToString("0.00") %</td>

                <!-- Estado -->
                <td>@item.Estado</td>

                <!-- Cliente (mostrar nombre, no ID) -->
                <td>@item.IdClienteNavigation?.Nombre</td>

                <!-- Empleado -->
                <td>@item.IdEmpleadoNavigation?.Nombre</td>

                <!-- Sucursal -->
                <td>@item.IdSucursalNavigation?.Nombre</td>

                <!-- ACCIONES -->
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.IdAlquiler"
                           class="btn btn-sm btn-warning">
                            Editar
                        </a>

                        <a asp-action="Details" asp-route-id="@item.IdAlquiler"
                           class="btn btn-sm btn-info text-white">
                            Detalles
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.IdAlquiler"
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
