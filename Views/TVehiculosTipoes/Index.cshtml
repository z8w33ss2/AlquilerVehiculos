@model IEnumerable<AlquilerVehiculos.Models.TVehiculosTipo>

@{
    ViewData["Title"] = "Tipos de Vehículos";
}

<h1 class="mb-4">Tipos de Vehículos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Registro
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Descripción</th>
            <th>Tarifa Diaria (₡)</th>
            <th class="text-center" style="width:200px;">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Descripción -->
                <td>@item.Descripcion</td>

                <!-- Tarifa formateada -->
                <td>₡ @item.TarifaDiaria.ToString("#,##0.00")</td>

                <!-- ACCIONES -->
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">

                        <a asp-action="Edit" asp-route-id="@item.IdTipo"
                           class="btn btn-sm btn-warning">
                            Editar
                        </a>

                        <a asp-action="Details" asp-route-id="@item.IdTipo"
                           class="btn btn-sm btn-info text-white">
                            Detalles
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.IdTipo"
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
