@model IEnumerable<AlquilerVehiculos.Models.TEmpleado>

@{
    ViewData["Title"] = "Empleados";
}

<h1 class="mb-4">Empleados</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Registro
    </a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Puesto</th>
            <th>Sucursal</th>
            <th class="text-center" style="width:200px;">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Correo</td>
                <td>@item.Telefono</td>
                <td>@item.Puesto</td>

                <!-- Mostrar NOMBRE DE LA SUCURSAL, no el ID -->
                <td>@item.IdSucursalNavigation?.Nombre</td>

                <!-- ACCIONES -->
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">

                        <a asp-action="Edit" asp-route-id="@item.IdEmpleado"
                           class="btn btn-sm btn-warning">
                            Editar
                        </a>

                        <a asp-action="Details" asp-route-id="@item.IdEmpleado"
                           class="btn btn-sm btn-info text-white">
                            Detalles
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.IdEmpleado"
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
