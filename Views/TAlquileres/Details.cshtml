@model AlquilerVehiculos.Models.TAlquilere

@{
    ViewData["Title"] = "Detalles del Alquiler";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <h4 class="card-title mb-3">Información del Alquiler</h4>
        <hr />

        <table class="table table-striped table-hover">
            <tbody>

                <tr>
                    <th class="table-dark" style="width: 30%;">Fecha Inicio</th>
                    <td>@Model.FechaInicio.ToString("dd/MM/yyyy")</td>
                </tr>

                <tr>
                    <th class="table-dark">Fecha Fin</th>
                    <td>@Model.FechaFin?.ToString("dd/MM/yyyy")</td>
                </tr>

                <tr>
                    <th class="table-dark">IVA</th>
                    <td>@Model.Iva.ToString("0.00") %</td>
                </tr>

                <tr>
                    <th class="table-dark">Estado</th>
                    <td>@Model.Estado</td>
                </tr>

                <tr>
                    <th class="table-dark">Cliente</th>
                    <td>@Model.IdClienteNavigation?.Nombre</td>
                </tr>

                <tr>
                    <th class="table-dark">Empleado</th>
                    <td>@Model.IdEmpleadoNavigation?.Nombre</td>
                </tr>

                <tr>
                    <th class="table-dark">Sucursal</th>
                    <td>@Model.IdSucursalNavigation?.Nombre</td>
                </tr>

            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                Volver a la lista
            </a>

            <a asp-action="Edit" asp-route-id="@Model?.IdAlquiler"
               class="btn btn-warning">
                Editar Alquiler
            </a>
        </div>

    </div>
</div>
